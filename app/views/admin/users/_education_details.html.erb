<div class="modal-header">
  <h5 class="modal-title" id="exampleModalCenterTitle">Education Detail</h5>
  <button aria-label="Close" class="close" data-dismiss="modal" type="button"></button>
  <span aria-hidden="true">Ã—</span>
</div>
<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">
      <div class="card">
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-bordered table-hover table-sm responsive nowrap" style="width:100%!important">
              <thead>
                <tr>
                  <th class="all">UserName</th>
                  <th class="all">CollegeName</th>
                  <th class="desktop">Degree</th>
                </tr>
              </thead>
              <tbody>
                <% @education_details.each do |ed| %>
                  <tr>
                    <td>
                      <%= ed.user.username %>
                    </td>
                    <td>
                      <%= ed.college_name %>
                    </td>
                    <td>
                      <%= ed.degree %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
