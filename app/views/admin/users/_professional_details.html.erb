                    <td>
                      <%= ed.user.username %>
                    </td>
                    <td>
                      <%= ed.prev_employer %>
                    </td>
                    <td>
                      <%= ed.position %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
