<div class="col-md-6">
  <div class="holder-form-modal" style="margin-top: 66px;">
    <div class="modal-header booking-modal-header">
      <h5 class="modal-titlePayment" id="exampleModalLabel">My Profile</h5>
    </div>
    <div class="modal-body pb-0 pt-0">
      <div class="wrapper center-block">
        <div class="form-heading">
          <div class="row">
            <div class="col-md-4">
              Profile Details
            </div>
          </div>
        </div>
        <div class="row">
          <div class="form-group col-md-12">
            <h3></h3>
          </div>
          <div class="form-group col-md-6">
            <label>
              UserName:
            </label>
            <span class="d-block mt-1"><%= @user.username %></span>
          </div>
          <div class="form-group col-md-6">
            <label>
              Email:
            </label>
            <span class="d-block mt-1"><%= @user.email %></span>
          </div>
        </div>
        <div class="form-heading">
          <div class="row">
            <div class="col-md-4">
              Personal Details
            </div>
          </div>
        </div>
        <div class="row">
          <div class="form-group col-md-12">
            <h3></h3>
          </div>
          <div class="form-group col-md-6">
            <label>
              Contact No:
            </label>
            <span class="d-block mt-1"><%= @user.personal_detail&.contact_no %></span>
          </div>
          <div class="form-group col-md-6">
            <label>
              Address:
            </label>
            <span class="d-block mt-1"><%= @user.personal_detail&.address %></span>
          </div>
        </div>
        <div class="form-heading">
          <div class="row">
            <div class="col-md-4">
              Education Details
            </div>
            <div class="col-lg-12">
              <div class="card">
                <div class="card-body">
                  <div class="table-responsive">
                    <table class="table table-bordered table-hover table-sm responsive nowrap" style="width:100%!important">
                      <thead>
                        <tr>
                          <th class="all">UserName</th>
                          <th class="all">CollegeName</th>
                          <th class="desktop">Degree</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% @user.education_details.each do |ed| %>
                          <tr>
                            <td>
                              <%= ed.user.username %>
                            </td>
                            <td>
                              <%= ed.college_name %>
                            </td>
                            <td>
                              <%= ed.degree %>
                            </td>
                          </tr>
                        <% end %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="form-heading">
          <div class="row">
            <div class="col-md-4">
              Professional Details
            </div>
            <div class="col-lg-12">
              <div class="card">
                <div class="card-body">
                  <div class="table-responsive">
                    <table class="table table-bordered table-hover table-sm responsive nowrap" style="width:100%!important">
                      <thead>
                        <tr>
                          <th class="all">UserName</th>
                          <th class="all">Previous Employer</th>
                          <th class="desktop">Designation</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% @user.professional_details.each do |pd| %>
                          <tr>
                            <td>
                              <%= pd.user.username %>
                            </td>
                            <td>
                              <%= pd.prev_employer %>
                            </td>
                            <td>
                              <%= pd.position %>
                            </td>
                          </tr>
                        <% end %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="form-heading" style="margin-top=10px">
          <div class="row">
            <div class="col-md-4">
              <%= link_to 'Edit', edit_end_users_user_path(@user), class: 'btn btn-lg btn-primary' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<br/>
<br/>
